@model IEnumerable<BAExpense.Models.Expense>

    <div class="container p-3">

        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">BAExpense</h2>
            </div>
                

            <div>
                <a class="btn btn-primary" asp-area="" asp-controller="Expense" asp-action="create">Create New Expense</a>
            </div>
        </div>

        <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Amount</th>
                    <th>Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exp in Model)
                {
                    <tr>
                        <td width="35%">@exp.ItemName</td>
                        <td width="35%">@exp.Amount</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Expense" asp-action="Update" asp-route-Id="@exp.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@exp.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <p>No Expense Yet!</p>
    }
</div>