@model BAExpense.ViewModels.LoginViewModel

<form method="post">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <p>Are you sure you want to logout?</p>
            <p>
                <button class="btn btn-primary" asp-controller="Authentication" asp-action="OnLogout">Yes</button>
                <button class="btn btn-light m-lg-5 border-dark" asp-controller="Authentication" asp-action="OnDontLogout">No</button>
            </p>
        </div>
    </div>
</form>